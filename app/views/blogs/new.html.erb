<div class="topic-new-wrapper">
  <div class="container topic-container">
    <h3 class="text-center">偏愛を語る</h3>
    <div class="row">
      <%= form_for @blog do |f| %>
      <div class="col-md-offset-2 col-md-8">
        <div class="form-group">>
         <%= f.label :photo,"私の偏愛食材",class:"text-white" %>
         <%= f.file_field :photo,class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :content,"語ります",class:"text-white" %>
          <%= f.text_area :content,class:"form-control",size: "20x20" %>
        </div>
          <%= f.submit "投稿",class:"btn btn-block btn-black" %>
      </div>
     <% end %>
    </div>
  </div>
</div>