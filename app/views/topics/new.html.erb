<div class="topic-new-wrapper">
  <div class="container topic-container">
    <h3 class="text-center">偏愛を語る</h3>
    <div class="row">
      <%= form_for @topic do |f| %>
      <div class="col-md-offset-3 col-md-6">
        <div class="form-group">>
         <%= f.label :image,"私の偏愛食材",class:"text-white" %>
         <%= f.file_field :image,class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description,"語ります",class:"text-white" %>
          <%= f.text_area :description,class:"form-control" %>
        </div>
          <%= f.submit "投稿",class:"btn btn-block btn-black" %>
      </div>
     <% end %>
    </div>
  </div>
</div>