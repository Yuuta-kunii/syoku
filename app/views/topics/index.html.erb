<div class="topic-index-wrapper">
  <h4 class="text-center">偏愛達のlibrary</h4>
  <div class="container topic-index-container">
     <% @topics.each do |topic| %>
      <div class="row">
        <div class="topics-index">  
         <div class="col-md-4">
           <div class="topic-index-single">
            <h5 class="text-center topic-author">
            <%= topic.user.name %>
            </h5>
            <%= image_tag topic.image.url,class:"topic-image" %>
            <p class="topic-description">
            <%= topic.description %>
            </p>
           </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>